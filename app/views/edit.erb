<form action="/recipes/<%=@recipe.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  Name<input id="recipe_name" type="text" value="<%= @recipe.name %>" name="name"/>
  Ingredients<input type="text" name="ingredients" id="ingredients_names" value="<%= @recipe.ingredients %>"/>
  Cook Time: <input type="text" name="cook_time", id="cook_time" value="<%= @recipe.cook_time %>"/>
  <input type="submit" value="submit"/>
</form>
