<h1>Edit Recipe</h1>

<form action="/recipes/<%=@recipe.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  Recipe Name: <input type="text" name="name" id="recipe_name" value="<%= @recipe.name %>"/>
  Ingredients: <input type="text" name="ingredients" id="ingredients_names" value="<%= @recipe.ingredients %>"/>
  Cook Time: <input type="text" name="cook_time", id="cook_time" value="<%= @recipe.cook_time %>"/>
  <input type="submit" value="submit"/>
</form>
